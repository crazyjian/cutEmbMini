page {
  width:100%;
  height:100%;
}

label {
  width:100%;
  background-color:white;
  padding:20rpx;
}

.section {
  width:100%;
  height:100%;
}

.flex-wrp {
  display: flex;
  margin-bottom:25px;
}

.button{
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  text-align: center;
}

.btn {
  width: 600rpx;
  background-color: #6495ED;
  color: #FFF;
  font-weight: bold;
  border-radius: 20rpx;
}

.title {
  text-align:center;
  margin-top:60rpx;
  font-size:60rpx;
  color:rgb(19, 91, 224);
}

.table {
  border-top: 1px solid darkgray;
  border-right: 1px solid darkgray;
  border-bottom: 1px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}
.td {
    width:50%;
    height: 100%;
    justify-content: center;
    text-align: center;
    display: flex;
    align-items: center;
    border-top: 1px solid darkgray;
    border-left: 1px solid darkgray;
}
.bg-w{
  background: white;
}
.bg-g{
  background: #f9f9f9;
}
.th {
  width: 50%;
  justify-content: center;
  display: flex;
  height: 2rem;
  align-items: center;
  font-weight: bold;
  border-left: 1px solid darkgray;
}