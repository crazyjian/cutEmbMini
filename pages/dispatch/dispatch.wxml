<view class="container" style="padding-top:40rpx;align-items:center;background-color:rgb(242, 242, 242)">
  
  <view class="section">
    <view class='searchItem'>
    <text>订单号</text>
    <input class='searchItemInput' name='orderName' placeholder='请输入您的订单号' value="{{orderName}}" bindinput='getOrderName'></input>
    <scroll-view scroll-y="true" class="scrollview" style='z-index:{{zIndex}}'>
      <view wx:for="{{bindSource}}">
        <view id="{{item}}" bindtap="itemtap" class="itemview">{{item}}</view>
      </view>
    </scroll-view>
    </view>
    <view class='searchItem'>
    <text>工序号</text>
      <picker style="margin-left:20rpx;width:70%" bindchange="bindPickerChange" value="{{index}}" range="{{procedures}}">
        <view class="picker">
          {{procedures[index]}}
        </view>
      </picker>
    </view>
    <view class="table">
      <view class="tr bg-w">
        <view class="th" style="width:15%;"><checkbox  bindtap='checkAll' data-checks="{{isCheckAll}}"/></view>
        <view class="th">序号</view>
        <view class="th">姓名</view>
        <view class="th ">工号</view>
      </view>
      <block wx:for="{{records}}" wx:key="{{employeeNumber}}">
        <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
          <view class="td" style="width:15%;"><checkbox data-index="{{index}}" checked="{{item.isSelect}}" bindtap='check'/></view>
          <view class="td">{{index+1}}</view>
          <view class="td">{{item.employeeName}}</view>
          <view class="td">{{item.employeeNumber}}</view>
        </view>
        <view class="tr" wx:else>
          <view class="td" style="width:15%;"><checkbox data-index="{{index}}" checked="{{item.isSelect}}" bindtap='check'/></view>
          <view class="td">{{index+1}}</view>
          <view class="td">{{item.employeeName}}</view>
          <view class="td">{{item.employeeNumber}}</view>
        </view>
      </block>
    </view>
    <view class='button'>
      <button class='btn' bindtap='addDispatch'>提交</button>
    </view>
  </view>
</view>